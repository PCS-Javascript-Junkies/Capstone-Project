<canvas id="{{weatherData.currently.icon}}" width="64" height="64">
</canvas>
<p class="question">Looks like it's {{weatherData.currently.summary}} and {{weatherData.currently.temperature}} today!</p>
<script>
      var icons = new Skycons({color: "#3d4d6f"}),
          list  = [
            "clear-day", "clear-night", "partly-cloudy-day",
            "partly-cloudy-night", "cloudy", "rain", "sleet", "snow", "wind",
            "fog"
          ],
          i;

      for(i = list.length; i--; )
        icons.set(list[i], list[i]);

      icons.play();
</script>